---
import Layout from '../../layouts/Layout.astro';
import { ReactApp } from '../../components/ReactApp';
import MetronomePage from '../../react-pages/Metronome';
import { loadApps } from '../../constants/apps';
import { metronomeKo } from '../../i18n/translations/metronome';

const apps = await loadApps();
const language = 'ko';
const currentPath = '/ko/metronome';
const t = metronomeKo;
---

<Layout
  title={t.seo.title}
  description={t.seo.description}
  keywords={t.seo.keywords}
  canonicalPath="/metronome"
  lang={language}
>
  <ReactApp
    client:only="react"
    currentPath={currentPath}
    language={language}
    apps={apps}
  >
    <MetronomePage language={language} />
  </ReactApp>
</Layout>
