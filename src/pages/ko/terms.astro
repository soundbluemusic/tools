---
import Layout from '../../layouts/Layout.astro';
import { ReactApp } from '../../components/ReactApp';
import TermsPage from '../../react-pages/Terms';
import { loadApps } from '../../constants/apps';

const apps = await loadApps();
const language = 'ko';
const currentPath = '/ko/terms';
---

<Layout
  title="이용약관"
  description="본 서비스의 이용약관입니다"
  canonicalPath="/terms"
  lang={language}
  noindex={true}
>
  <ReactApp
    client:only="react"
    currentPath={currentPath}
    language={language}
    apps={apps}
  >
    <TermsPage language={language} />
  </ReactApp>
</Layout>
