{
  "name": "tools",
  "private": true,
  "version": "0.2.0-베타",
  "type": "module",
  "description": "A collection of utility tools built with SolidStart",
  "author": "Tools Team",
  "license": "MIT",
  "homepage": "https://tools.soundbluemusic.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/soundbluemusic/tools.git"
  },
  "bugs": {
    "url": "https://github.com/soundbluemusic/tools/issues"
  },
  "keywords": [
    "solidjs",
    "solidstart",
    "typescript",
    "vite",
    "metronome",
    "drum-machine",
    "qr-code",
    "web-audio",
    "pwa",
    "music-tools"
  ],
  "scripts": {
    "dev": "vinxi dev",
    "prebuild": "npm run generate-sitemap",
    "wasm:build": "npm run asbuild:release && cp build/release.wasm src/wasm/processing.wasm",
    "build": "vinxi build",
    "preview": "vinxi start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:run",
    "generate-icons": "tsx scripts/generate-icons.ts",
    "generate-og-image": "tsx scripts/generate-og-image.ts",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "convert-webp": "tsx scripts/convert-to-webp.ts",
    "sync-docs": "tsx scripts/sync-docs.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "prepare": "husky",
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release",
    "start": "vinxi start"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.3",
    "@solidjs/start": "^1.1.0",
    "@tailwindcss/vite": "^4.1.17",
    "dexie": "^4.2.1",
    "qrious": "^4.0.2",
    "solid-js": "^1.9.5",
    "tailwindcss": "^4.1.17",
    "vinxi": "^0.5.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@playwright/test": "^1.48.0",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "assemblyscript": "^0.28.9",
    "eslint": "^9.9.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^7.2.6",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-solid": "^2.11.6",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  }
}
